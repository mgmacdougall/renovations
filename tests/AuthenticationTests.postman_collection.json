	},
	"item": [
		{
			"name": "LogIn",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const cookieHeader = pm.response.headers.get('Set-Cookie');\r",
							"if (cookieHeader) {\r",
							"    const tokenMatch = cookieHeader.match(/authToken=([^;]+)/);\r",
							"    if (tokenMatch) {\r",
							"        pm.environment.set(\"authToken\", tokenMatch[1]);\r",
							"        console.log(\"Token saved:\", tokenMatch[1]);\r",
							"    }\r",
							"}\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\": \"auth-user1\",\r\n    \"email\": \"auth-user1@text.com\",\r\n    \"password\": \"user1234!4\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:5050/login",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "5050",
					"path": [
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "ProtectedRoute",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const token = pm.environment.get(\"authToken\");\r",
							"if (token) {\r",
							"    pm.request.headers.add({ key: \"Cookie\", value: `authToken=${token}` });\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "jwt",
					"jwt": [
						{
							"key": "algorithm",
							"value": "HS256",
							"type": "string"
						},
						{
